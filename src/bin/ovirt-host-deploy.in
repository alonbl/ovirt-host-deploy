ENV="/etc/ovirt-host-deploy.env.d"
for f in $([ -d "${ENV}" ] && find "${ENV}" -name '*.conf' | sort); do
	[ -r "${f}" ] && . "${f}"
done

scriptdir="$(dirname "$0")"
otopidir="${scriptdir}"
extraenv=""
OTOPI_SOURCES="${OTOPI_SOURCES:-@OTOPI_SOURCES@}"
if [ -z "${OTOPI_SOURCES}" ]; then
	if [ -x "${scriptdir}/otopi" ]; then
		otopidir="${scriptdir}"
	else
		otopidir="/usr/sbin"
	fi
else
	otopidir="${OTOPI_SOURCES}/src/bin"
fi
if [ -f "${scriptdir}/.source" ]; then
	export PYTHONPATH="$(cd "${scriptdir}" && pwd)/..:${PYTHONPATH}"
	extraenv="APPEND:BASE/pluginPath=str:${scriptdir}/../plugins"
fi
exec "${otopidir}/otopi" "${extraenv} APPEND:BASE/pluginGroups=str:ovirt-host-deploy $*"
